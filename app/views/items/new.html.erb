<h1>新規投稿</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item do |f| %>
  <h4>商品名</h4>
  <%= f.text_field :title %>
	
  <h4>商品説明</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>