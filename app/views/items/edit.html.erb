<h1>Items#edit</h1>
  <% if @item.errors.any? %>
    <h3>
      <%= @item.errors.count %>errors prohibited this obj from being saved:
    </h3>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @item do |f| %>
    <h4>商品名</h4>
    <%= f.text_field :title %>
      
    <h4>商品説明</h4>
    <%= f.text_area :body %>

    <%= f.submit '保存' %>
      
  <% end %>